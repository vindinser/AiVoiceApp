<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- 选中状态的颜色（蓝色） -->
    <solid android:color="@color/color_primary" /> <!-- 标准Material蓝色 -->

    <!-- 圆点尺寸（比未选中状态稍大） -->
    <size
        android:width="12dp"
        android:height="12dp" />

    <!-- 圆角 -->
    <corners android:radius="6dp" />
</shape>